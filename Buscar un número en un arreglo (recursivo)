#include <iostream>
using namespace std;

bool buscar(int arr[], int n, int valor) {
    if (n == 0) return false;
    if (arr[n - 1] == valor) return true;
    return buscar(arr, n - 1, valor);
}

int main() {
    int n, valor;
    cout << "Tamaño del arreglo: ";
    cin >> n;
    int *arr = new int[n];
    for (int i = 0; i < n; i++) cin >> arr[i];
    cout << "Número a buscar: ";
    cin >> valor;
    cout << (buscar(arr, n, valor) ? "Encontrado" : "No encontrado") << endl;
    delete[] arr;
    return 0;
}
