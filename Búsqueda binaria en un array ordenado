#include <iostream>
using namespace std;

int busquedaBinaria(int arr[], int n, int objetivo){
    int low = 0, high = n-1;
    while(low<=high){
        int mid = low + (high-low)/2;
        if(arr[mid]==objetivo) return mid;
        else if(arr[mid]<objetivo) low=mid+1;
        else high=mid-1;
    }
    return -1;
}

int main(){
    int arr[] = {1,3,5,7,9};
    int n = sizeof(arr)/sizeof(arr[0]);
    int objetivo = 5;
    int idx = busquedaBinaria(arr,n,objetivo);
    cout << "Índice encontrado: " << idx << endl;
    return 0;
}
