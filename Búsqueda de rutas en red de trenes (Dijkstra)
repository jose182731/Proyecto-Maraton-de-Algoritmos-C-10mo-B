#include <iostream>
#include <vector>
#include <queue>
using namespace std;

void rutasTren(int inicio, vector<vector<pair<int,int>>>& trenes){
    int n=trenes.size();
    vector<int> dist(n,1e9);
    dist[inicio]=0;
    priority_queue<pair<int,int>, vector<pair<int,int>>, greater<>> pq;
    pq.push({0,inicio});

    while(!pq.empty()){
        auto [d,u]=pq.top(); pq.pop();
        for(auto [v,w]:trenes[u]){
            if(d+w<dist[v]){ dist[v]=d+w; pq.push({dist[v],v}); }
        }
    }

    for(int i=0;i<n;i++)
        cout<<"Estación "<<i<<" -> Tiempo mínimo: "<<dist[i]<<" min\n";
}

int main(){
    vector<vector<pair<int,int>>> trenes={
        {{1,5},{2,10}}, {{0,5},{3,3}}, {{0,10},{3,2}}, {{1,3},{2,2}}
    };
    rutasTren(0,trenes);
    return 0;
}
