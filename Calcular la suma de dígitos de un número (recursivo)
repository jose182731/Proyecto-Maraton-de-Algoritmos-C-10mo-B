#include <iostream>
using namespace std;

int sumaDigitos(int n) {
    if (n == 0) return 0;
    return (n % 10) + sumaDigitos(n / 10);
}

int main() {
    int numero;
    cout << "Ingrese un número: ";
    cin >> numero;
    cout << "Suma de sus dígitos: " << sumaDigitos(numero) << endl;
    return 0;
}
