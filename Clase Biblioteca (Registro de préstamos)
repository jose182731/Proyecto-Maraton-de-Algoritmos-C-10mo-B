#include <iostream>
#include <string>
using namespace std;

class Libro {
private:
    string titulo;
    bool prestado;
public:
    Libro(string t) : titulo(t), prestado(false) {}
    void prestar() {
        if (!prestado) {
            prestado = true;
            cout << "Libro \"" << titulo << "\" prestado.\n";
        } else {
            cout << "Libro \"" << titulo << "\" ya estÃ¡ prestado.\n";
        }
    }
    void devolver() {
        if (prestado) {
            prestado = false;
            cout << "Libro \"" << titulo << "\" devuelto.\n";
        }
    }
};

int main() {
    Libro l1("El Principito"), l2("Don Quijote");
    l1.prestar();
    l1.prestar();
    l1.devolver();
    l2.prestar();
    return 0;
}
