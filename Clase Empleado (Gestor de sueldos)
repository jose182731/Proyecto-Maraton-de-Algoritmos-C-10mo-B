#include <iostream>
#include <string>
using namespace std;

class Empleado {
private:
    string nombre;
    double sueldoBase, bono;
public:
    Empleado(string n, double s, double b)
        : nombre(n), sueldoBase(s), bono(b) {}
    double sueldoTotal() { return sueldoBase + bono; }
    void mostrarInfo() {
        cout << "Empleado: " << nombre << " | Sueldo total: $" << sueldoTotal() << endl;
    }
};

int main() {
    Empleado e1("Juan", 1200, 200);
    Empleado e2("Laura", 1500, 350);
    e1.mostrarInfo();
    e2.mostrarInfo();
    return 0;
}
