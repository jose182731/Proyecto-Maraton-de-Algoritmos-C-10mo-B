#include <iostream>
#include <string>
using namespace std;

class Libro {
private:
    string titulo, autor;
    int anio;
public:
    Libro(string t, string a, int y) : titulo(t), autor(a), anio(y) {}
    void mostrarInfo() {
        cout << "Título: " << titulo << ", Autor: " << autor << ", Año: " << anio << endl;
    }
};

int main() {
    Libro libro1("Cien Años de Soledad", "Gabriel García Márquez", 1967);
    Libro libro2("1984", "George Orwell", 1949);
    libro1.mostrarInfo();
    libro2.mostrarInfo();
    return 0;
}
