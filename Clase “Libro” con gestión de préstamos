#include <iostream>
#include <string>
using namespace std;

class Libro {
    string titulo;
    bool prestado;
public:
    Libro(string t) : titulo(t), prestado(false) {}
    void prestar() { prestado = true; }
    void devolver() { prestado = false; }
    void mostrar() { cout << titulo << " | " << (prestado?"Prestado":"Disponible") << endl; }
};

int main() {
    Libro l1("C++ Intermedio");
    l1.mostrar();
    l1.prestar();
    l1.mostrar();
    l1.devolver();
    l1.mostrar();
    return 0;
}
