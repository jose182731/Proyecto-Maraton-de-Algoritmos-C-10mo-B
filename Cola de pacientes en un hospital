#include <iostream>
#include <queue>
#include <string>
using namespace std;

struct Paciente {
    string nombre;
    int prioridad; // 1 = urgente, 2 = normal
};

int main() {
    queue<Paciente> normales, urgentes;
    int opcion;
    do {
        cout << "\n1. Nuevo paciente\n2. Atender paciente\n3. Ver colas\n4. Salir\nOpciÃ³n: ";
        cin >> opcion;
        cin.ignore();

        if (opcion == 1) {
            Paciente p;
            cout << "Nombre: "; getline(cin, p.nombre);
            cout << "Prioridad (1 urgente, 2 normal): "; cin >> p.prioridad;
            cin.ignore();
            (p.prioridad == 1 ? urgentes : normales).push(p);
        } 
        else if (opcion == 2) {
            if (!urgentes.empty()) {
                cout << "Atendiendo urgente: " << urgentes.front().nombre << endl;
                urgentes.pop();
            } else if (!normales.empty()) {
                cout << "Atendiendo normal: " << normales.front().nombre << endl;
                normales.pop();
            } else {
                cout << "No hay pacientes.\n";
            }
        } 
        else if (opcion == 3) {
            cout << "\nPacientes urgentes: " << urgentes.size() 
                 << "\nPacientes normales: " << normales.size() << endl;
        }
    } while (opcion != 4);
    return 0;
}
