#include <iostream>
#include <queue>
#include <string>
using namespace std;

struct Pedido {
    string cliente;
    string platillo;
};

int main() {
    queue<Pedido> pedidos;
    pedidos.push({"Ana", "Ensalada"});
    pedidos.push({"Luis", "Pizza"});
    pedidos.push({"Marta", "Sopa"});

    while (!pedidos.empty()) {
        cout << "Sirviendo a " << pedidos.front().cliente
             << " (" << pedidos.front().platillo << ")\n";
        pedidos.pop();
    }

    return 0;
}
