#include <iostream>
#include <queue>
#include <string>
using namespace std;

struct Emergencia {
    string descripcion;
    int prioridad;
    bool operator<(const Emergencia& e) const {
        return prioridad > e.prioridad; // Menor valor = más urgente
    }
};

int main() {
    priority_queue<Emergencia> cola;
    cola.push({"Fuego en cocina", 1});
    cola.push({"Corte de electricidad", 3});
    cola.push({"Caída de persona", 2});

    while (!cola.empty()) {
        cout << "Atendiendo: " << cola.top().descripcion << " (prioridad " << cola.top().prioridad << ")\n";
        cola.pop();
    }
    return 0;
}
