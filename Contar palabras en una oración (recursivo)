#include <iostream>
#include <string>
using namespace std;

int contarPalabras(string s, int i = 0, bool enPalabra = false) {
    if (i == s.size()) return enPalabra ? 1 : 0;
    if (s[i] == ' ') return (enPalabra ? 1 : 0) + contarPalabras(s, i + 1, false);
    return contarPalabras(s, i + 1, true);
}

int main() {
    string frase;
    cout << "Ingrese una frase: ";
    getline(cin, frase);
    cout << "Cantidad de palabras: " << contarPalabras(frase) << endl;
    return 0;
}
