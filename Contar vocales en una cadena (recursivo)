#include <iostream>
using namespace std;

int contarVocales(const char* str) {
    if (*str == '\0') return 0;
    char c = tolower(*str);
    return ((c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') ? 1 : 0)
           + contarVocales(str + 1);
}

int main() {
    char frase[100];
    cout << "Ingrese una frase: ";
    cin.getline(frase, 100);

    cout << "Cantidad de vocales: " << contarVocales(frase) << endl;
    return 0;
}
