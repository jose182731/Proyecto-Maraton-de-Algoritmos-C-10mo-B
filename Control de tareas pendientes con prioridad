#include <iostream>
#include <queue>
#include <string>
using namespace std;

struct Tarea {
    string descripcion;
    int prioridad;
    bool operator<(const Tarea &t) const {
        return prioridad > t.prioridad;
    }
};

int main() {
    priority_queue<Tarea> tareas;
    tareas.push({"Entregar informe", 2});
    tareas.push({"Responder correos", 3});
    tareas.push({"Reuni√≥n urgente", 1});

    cout << "Tareas por prioridad:\n";
    while (!tareas.empty()) {
        cout << "- " << tareas.top().descripcion << " (Prioridad " << tareas.top().prioridad << ")\n";
        tareas.pop();
    }
    return 0;
}
