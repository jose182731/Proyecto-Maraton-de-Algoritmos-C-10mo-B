#include <iostream>
#include <string>
using namespace std;

int main() {
    string frase;
    cout << "Ingrese una frase: ";
    getline(cin, frase);

    for (char &c : frase) {
        if (islower(c)) {
            c = toupper(c);
        }
    }

    cout << "Frase en mayÃºsculas: " << frase << endl;
    return 0;
}
