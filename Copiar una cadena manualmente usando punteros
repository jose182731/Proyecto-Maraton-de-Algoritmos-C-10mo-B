#include <iostream>
using namespace std;

void copiarCadena(char* destino, const char* origen) {
    while (*origen != '\0') {
        *destino = *origen;
        destino++;
        origen++;
    }
    *destino = '\0';
}

int main() {
    char origen[100];
    char destino[100];

    cout << "Ingrese una cadena: ";
    cin.getline(origen, 100);

    copiarCadena(destino, origen);
    cout << "Cadena copiada: " << destino << endl;

    return 0;
}
