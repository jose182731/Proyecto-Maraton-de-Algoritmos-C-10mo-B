#include <bits/stdc++.h>
using namespace std;
int main(){
    const int INF=1e9;
    vector<vector<int>> dist={{0,3,INF,5},
                              {2,0,INF,4},
                              {INF,1,0,INF},
                              {INF,INF,2,0}};
    int n=dist.size();
    for(int k=0;k<n;k++)
        for(int i=0;i<n;i++)
            for(int j=0;j<n;j++)
                dist[i][j]=min(dist[i][j],dist[i][k]+dist[k][j]);
    cout<<"Matriz de distancias mÃ¡s cortas:\n";
    for(auto &r:dist){ for(auto &x:r) cout<<(x==INF?999:x)<<" "; cout<<"\n"; }
    return 0;
}
