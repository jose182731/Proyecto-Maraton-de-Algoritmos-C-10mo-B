#include <iostream>
#include <string>
using namespace std;

int main() {
    int n;
    cout << "Cantidad de palabras: ";
    cin >> n;

    string *palabras = new string[n];
    for (int i = 0; i < n; i++) {
        cout << "Palabra " << i + 1 << ": ";
        cin >> palabras[i];
    }

    cout << "\nContenido almacenado:\n";
    for (int i = 0; i < n; i++)
        cout << palabras[i] << " ";

    delete[] palabras;
    return 0;
}
