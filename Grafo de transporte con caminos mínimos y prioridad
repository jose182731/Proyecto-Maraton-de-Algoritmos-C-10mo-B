#include <iostream>
#include <vector>
#include <queue>
using namespace std;

void rutasMinimas(int inicio, vector<vector<pair<int,int>>>& grafo){
    int n = grafo.size();
    vector<int> dist(n,1e9);
    dist[inicio]=0;
    priority_queue<pair<int,int>, vector<pair<int,int>>, greater<>> pq;
    pq.push({0,inicio});

    while(!pq.empty()){
        auto [d,u]=pq.top(); pq.pop();
        for(auto [v,w]: grafo[u]){
            if(d+w<dist[v]){ dist[v]=d+w; pq.push({dist[v],v}); }
        }
    }

    for(int i=0;i<n;i++) cout<<"Nodo "<<i<<" -> Distancia: "<<dist[i]<<endl;
}

int main(){
    vector<vector<pair<int,int>>> grafo={
        {{1,4},{2,2}}, {{0,4},{2,5},{3,10}}, {{0,2},{1,5},{3,3}}, {{1,10},{2,3}}
    };
    rutasMinimas(0,grafo);
    return 0;
}
