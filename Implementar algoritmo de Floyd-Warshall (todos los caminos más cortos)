#include <iostream>
#include <vector>
using namespace std;

const int INF = 1e9;

int main(){
    int n = 4;
    vector<vector<int>> dist = {
        {0, 3, INF, 5},
        {2, 0, INF, 4},
        {INF, 1, 0, INF},
        {INF, INF, 2, 0}
    };

    for(int k=0;k<n;k++)
        for(int i=0;i<n;i++)
            for(int j=0;j<n;j++)
                if(dist[i][k]!=INF && dist[k][j]!=INF)
                    dist[i][j] = min(dist[i][j], dist[i][k]+dist[k][j]);

    cout << "Matriz de distancias mÃ­nimas:\n";
    for(auto &fila: dist){
        for(auto d: fila) cout << (d==INF?999:d) << " ";
        cout << endl;
    }
    return 0;
}
