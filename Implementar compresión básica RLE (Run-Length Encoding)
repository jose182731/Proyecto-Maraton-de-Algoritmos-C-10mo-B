#include <iostream>
#include <string>
using namespace std;

string comprimirRLE(string s){
    string res=""; int cont=1;
    for(size_t i=1;i<=s.size();i++){
        if(i<s.size() && s[i]==s[i-1]) cont++;
        else{ res+=s[i-1]+to_string(cont); cont=1; }
    }
    return res;
}

int main(){
    string texto="aaabbccccd";
    cout<<"Original: "<<texto<<"\nComprimido: "<<comprimirRLE(texto)<<endl;
    return 0;
}
