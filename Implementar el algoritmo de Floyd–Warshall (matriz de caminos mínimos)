#include <iostream>
#include <vector>
using namespace std;
const int INF=9999;

int main(){
    vector<vector<int>> dist={
        {0,3,INF,5},
        {2,0,INF,4},
        {INF,1,0,INF},
        {INF,INF,2,0}
    };
    int n=dist.size();

    for(int k=0;k<n;k++)
        for(int i=0;i<n;i++)
            for(int j=0;j<n;j++)
                if(dist[i][k]+dist[k][j]<dist[i][j])
                    dist[i][j]=dist[i][k]+dist[k][j];

    cout<<"Matriz de distancias mÃ­nimas:\n";
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++)
            cout<< (dist[i][j]==INF?"INF":to_string(dist[i][j])) << "\t";
        cout<<endl;
    }
}
