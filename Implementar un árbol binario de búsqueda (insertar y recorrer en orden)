#include <iostream>
using namespace std;

struct Nodo{
    int valor;
    Nodo* izq;
    Nodo* der;
    Nodo(int v): valor(v), izq(NULL), der(NULL){}
};

Nodo* insertar(Nodo* raiz, int valor){
    if(!raiz) return new Nodo(valor);
    if(valor < raiz->valor) raiz->izq = insertar(raiz->izq, valor);
    else raiz->der = insertar(raiz->der, valor);
    return raiz;
}

void inOrden(Nodo* raiz){
    if(!raiz) return;
    inOrden(raiz->izq);
    cout << raiz->valor << " ";
    inOrden(raiz->der);
}

int main(){
    Nodo* raiz = NULL;
    raiz = insertar(raiz,8);
    raiz = insertar(raiz,3);
    raiz = insertar(raiz,10);
    raiz = insertar(raiz,1);
    raiz = insertar(raiz,6);
    cout << "Recorrido en orden: ";
    inOrden(raiz);
    return 0;
}
