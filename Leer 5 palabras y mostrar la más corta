#include <iostream>
#include <string>
using namespace std;

int main() {
    string palabra, menor;
    cout << "Ingrese 5 palabras:\n";
    for (int i = 0; i < 5; i++) {
        cin >> palabra;
        if (i == 0 || palabra.length() < menor.length())
            menor = palabra;
    }

    cout << "La palabra mÃ¡s corta es: " << menor << endl;
    return 0;
}
