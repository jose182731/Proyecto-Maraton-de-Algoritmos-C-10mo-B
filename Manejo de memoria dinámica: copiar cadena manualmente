#include <iostream>
#include <cstring>
using namespace std;

char* copiarCadena(const char* origen) {
    int len = strlen(origen);
    char* destino = new char[len + 1];
    for (int i = 0; i <= len; i++)
        *(destino + i) = *(origen + i);
    return destino;
}

int main() {
    char texto[] = "ProgramaciÃ³n C++";
    char* copia = copiarCadena(texto);
    cout << "Cadena copiada: " << copia << endl;
    delete[] copia;
    return 0;
}
