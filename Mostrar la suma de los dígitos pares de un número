#include <iostream>
using namespace std;

int main() {
    int num, suma = 0;
    cout << "Ingrese un número: ";
    cin >> num;

    while (num > 0) {
        int digito = num % 10;
        if (digito % 2 == 0)
            suma += digito;
        num /= 10;
    }

    cout << "Suma de dígitos pares: " << suma << endl;
    return 0;
}
