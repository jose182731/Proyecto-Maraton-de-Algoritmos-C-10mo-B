#include <iostream>
#include <string>
using namespace std;

int main() {
    string palabra;
    cout << "Ingrese una palabra: ";
    cin >> palabra;

    if (palabra.front() == palabra.back())
        cout << "Empieza y termina con la misma letra." << endl;
    else
        cout << "No empieza y termina con la misma letra." << endl;

    return 0;
}
