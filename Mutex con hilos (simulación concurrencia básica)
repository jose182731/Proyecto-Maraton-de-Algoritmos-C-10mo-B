#include <bits/stdc++.h>
#include <thread>
#include <mutex>
using namespace std;
mutex mtx;
int contador=0;
void tarea(int id){
    for(int i=0;i<100;i++){
        lock_guard<mutex> lock(mtx);
        contador++;
    }
}
int main(){
    thread t1(tarea,1), t2(tarea,2), t3(tarea,3);
    t1.join(); t2.join(); t3.join();
    cout<<"Contador final="<<contador<<"\n";
    return 0;
}
