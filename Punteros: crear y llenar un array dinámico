#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "TamaÃ±o del array: ";
    cin >> n;
    int* arr = new int[n];
    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> arr[i];
    }
    cout << "Contenido del array: ";
    for (int i = 0; i < n; i++) cout << arr[i] << " ";
    delete[] arr;
    return 0;
}
