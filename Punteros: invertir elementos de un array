#include <iostream>
using namespace std;

void invertir(int* arr, int n) {
    int* inicio = arr;
    int* fin = arr + n - 1;
    while (inicio < fin) {
        int temp = *inicio;
        *inicio = *fin;
        *fin = temp;
        inicio++;
        fin--;
    }
}

int main() {
    int arr[] = {1,2,3,4,5};
    int n = 5;
    invertir(arr, n);
    for(int i=0;i<n;i++) cout << arr[i] << " ";
    return 0;
}
