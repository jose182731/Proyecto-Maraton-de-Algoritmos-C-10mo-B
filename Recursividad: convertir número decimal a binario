#include <iostream>
using namespace std;

void aBinario(int n) {
    if (n == 0) return;
    aBinario(n / 2);
    cout << n % 2;
}

int main() {
    int n;
    cout << "Ingrese un nÃºmero decimal: ";
    cin >> n;
    cout << "Binario: ";
    if (n == 0) cout << "0";
    else aBinario(n);
    cout << endl;
    return 0;
}
