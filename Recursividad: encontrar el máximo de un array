#include <iostream>
using namespace std;

int maximoRecursivo(int arr[], int n) {
    if (n == 1) return arr[0];
    int maxRest = maximoRecursivo(arr, n - 1);
    return (arr[n - 1] > maxRest) ? arr[n - 1] : maxRest;
}

int main() {
    int n;
    cout << "Ingrese la cantidad de números: ";
    cin >> n;
    int* numeros = new int[n];

    for (int i = 0; i < n; i++) {
        cout << "Número " << i + 1 << ": ";
        cin >> numeros[i];
    }

    cout << "El número máximo es: " << maximoRecursivo(numeros, n) << endl;

    delete[] numeros;
    return 0;
}
