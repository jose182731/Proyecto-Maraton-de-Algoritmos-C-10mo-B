#include <iostream>
using namespace std;

int sumaNaturales(int n) {
    if (n == 0) return 0;
    return n + sumaNaturales(n - 1);
}

int main() {
    int n;
    cout << "Ingrese un nÃºmero: ";
    cin >> n;
    cout << "La suma de los primeros " << n << " nÃºmeros es " << sumaNaturales(n) << endl;
    return 0;
}
