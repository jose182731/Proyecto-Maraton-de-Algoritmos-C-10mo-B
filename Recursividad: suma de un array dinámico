#include <iostream>
using namespace std;

int sumaArray(int* arr, int n) {
    if (n == 0) return 0;
    return arr[n-1] + sumaArray(arr, n-1);
}

int main() {
    int n;
    cout << "Cantidad de nÃºmeros: ";
    cin >> n;
    int* arr = new int[n];
    for (int i = 0; i < n; i++) cin >> arr[i];

    cout << "Suma total: " << sumaArray(arr, n) << endl;

    delete[] arr;
    return 0;
}
