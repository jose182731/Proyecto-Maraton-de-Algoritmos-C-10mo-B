#include <iostream>
using namespace std;

int sumaRecursiva(int arr[], int n) {
    if (n == 0) return 0;
    return arr[n - 1] + sumaRecursiva(arr, n - 1);
}

int main() {
    int n;
    cout << "Ingrese cantidad de elementos: ";
    cin >> n;
    int *arr = new int[n];
    for (int i = 0; i < n; i++) cin >> arr[i];
    cout << "Suma total: " << sumaRecursiva(arr, n) << endl;
    delete[] arr;
    return 0;
}
