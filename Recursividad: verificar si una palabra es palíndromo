#include <iostream>
#include <string>
using namespace std;

bool esPalindromo(const string &s, int i, int j) {
    if (i >= j) return true;
    if (s[i] != s[j]) return false;
    return esPalindromo(s, i + 1, j - 1);
}

int main() {
    string palabra;
    cout << "Ingrese una palabra: ";
    cin >> palabra;
    cout << (esPalindromo(palabra, 0, palabra.length() - 1) ? "Es palíndromo" : "No es palíndromo") << endl;
    return 0;
}
