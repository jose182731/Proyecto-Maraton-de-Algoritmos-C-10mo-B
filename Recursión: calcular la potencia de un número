#include <iostream>
using namespace std;

int potencia(int base, int exp) {
    if (exp == 0) return 1;
    return base * potencia(base, exp - 1);
}

int main() {
    int b, e;
    cout << "Ingrese base: "; cin >> b;
    cout << "Ingrese exponente: "; cin >> e;
    cout << b << "^" << e << " = " << potencia(b, e) << endl;
    return 0;
}
