#include <iostream>
#include <vector>
#include <string>
using namespace std;

class Mascota {
    string nombre, especie;
    int edad;
public:
    Mascota(string n, string e, int a) : nombre(n), especie(e), edad(a) {}
    void mostrar() {
        cout << "Mascota: " << nombre << " (" << especie << "), " << edad << " aÃ±os.\n";
    }
};

int main() {
    vector<Mascota> mascotas;
    mascotas.push_back(Mascota("Luna", "Perro", 3));
    mascotas.push_back(Mascota("Michi", "Gato", 2));
    for (auto &m : mascotas) m.mostrar();
    return 0;
}
