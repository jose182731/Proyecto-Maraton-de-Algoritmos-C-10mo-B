#include <iostream>
using namespace std;

int main() {
    int filas, columnas;
    cout << "Filas: "; cin >> filas;
    cout << "Columnas: "; cin >> columnas;

    int **cine = new int*[filas];
    for (int i = 0; i < filas; i++)
        cine[i] = new int[columnas]{0};

    int f, c;
    cout << "\nIngrese asiento a reservar (fila y columna): ";
    cin >> f >> c;
    if (cine[f][c] == 0) {
        cine[f][c] = 1;
        cout << "Asiento reservado.\n";
    } else {
        cout << "Asiento ya ocupado.\n";
    }

    cout << "\nMapa del cine:\n";
    for (int i = 0; i < filas; i++) {
        for (int j = 0; j < columnas; j++)
            cout << cine[i][j] << " ";
        cout << endl;
    }

    for (int i = 0; i < filas; i++)
        delete[] cine[i];
    delete[] cine;

    return 0;
}
