#include <iostream>
#include <string>
using namespace std;

struct Producto {
    string nombre;
    double precio;
};

int main() {
    Producto carrito[10];
    int cantidad = 0;
    double total = 0;
    char continuar;

    do {
        cout << "Nombre del producto: ";
        cin >> carrito[cantidad].nombre;
        cout << "Precio: $";
        cin >> carrito[cantidad].precio;
        total += carrito[cantidad].precio;
        cantidad++;

        cout << "Â¿Desea agregar otro producto? (s/n): ";
        cin >> continuar;
    } while (continuar == 's' && cantidad < 10);

    cout << "\nResumen del carrito:\n";
    for (int i = 0; i < cantidad; i++) {
        cout << carrito[i].nombre << " - $" << carrito[i].precio << endl;
    }
    cout << "Total a pagar: $" << total << endl;
    return 0;
}
