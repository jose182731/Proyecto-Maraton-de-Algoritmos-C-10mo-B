#include <iostream>
#include <queue>
#include <vector>
using namespace std;

int dx[]={1,-1,0,0};
int dy[]={0,0,1,-1};

void flujoAgua(vector<vector<int>>& mapa){
    int n=mapa.size(), m=mapa[0].size();
    queue<pair<int,int>> q;
    q.push({0,0});
    mapa[0][0]=2;

    while(!q.empty()){
        auto [x,y]=q.front(); q.pop();
        for(int i=0;i<4;i++){
            int nx=x+dx[i], ny=y+dy[i];
            if(nx>=0 && ny>=0 && nx<n && ny<m && mapa[nx][ny]==0){
                mapa[nx][ny]=2;
                q.push({nx,ny});
            }
        }
    }

    cout<<"Mapa despuÃ©s del flujo:\n";
    for(auto &fila:mapa){
        for(int c:fila) cout<<c<<" ";
        cout<<endl;
    }
}

int main(){
    vector<vector<int>> mapa={{0,0,1},{0,1,0},{0,0,0}};
    flujoAgua(mapa);
    return 0;
}
