#include <iostream>
#include <vector>
#include <queue>
using namespace std;

void tráficoBFS(int inicio, vector<vector<int>>& calles){
    int n = calles.size();
    vector<int> pasos(n, -1);
    queue<int> q;
    pasos[inicio] = 0;
    q.push(inicio);

    while(!q.empty()){
        int v = q.front(); q.pop();
        cout<<"Intersección "<<v<<" -> pasos: "<<pasos[v]<<endl;
        for(int u: calles[v]){
            if(pasos[u]==-1){ pasos[u]=pasos[v]+1; q.push(u); }
        }
    }
}

int main(){
    vector<vector<int>> calles={{1,2},{0,3},{0,3,4},{1,2,4},{2,3}};
    tráficoBFS(0, calles);
    return 0;
}
