#include <iostream>
#include <vector>
#include <queue>
using namespace std;
typedef pair<int,int> Par;
#define INF 1e9

int main() {
    int n=6;
    vector<vector<Par>> grafo(n);
    grafo[0]={{1,7},{2,9},{5,14}};
    grafo[1]={{0,7},{2,10},{3,15}};
    grafo[2]={{0,9},{1,10},{3,11},{5,2}};
    grafo[3]={{1,15},{2,11},{4,6}};
    grafo[4]={{3,6},{5,9}};
    grafo[5]={{0,14},{2,2},{4,9}};

    vector<int> dist(n,INF);
    dist[0]=0;
    priority_queue<Par,vector<Par>,greater<Par>> pq;
    pq.push({0,0});

    while(!pq.empty()){
        int d=pq.top().first, u=pq.top().second; pq.pop();
        for(auto [v,w]:grafo[u])
            if(d+w<dist[v]){
                dist[v]=d+w;
                pq.push({dist[v],v});
            }
    }

    cout<<"Distancias desde nodo 0:\n";
    for(int i=0;i<n;i++) cout<<i<<": "<<dist[i]<<endl;
    return 0;
}
