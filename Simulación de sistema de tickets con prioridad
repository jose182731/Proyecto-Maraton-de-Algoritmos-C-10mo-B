#include <iostream>
#include <queue>
using namespace std;

struct Ticket {
    int id, prioridad;
    string desc;
    bool operator<(const Ticket& t) const { return prioridad < t.prioridad; }
};

int main(){
    priority_queue<Ticket> cola;
    cola.push({1,3,"Error de conexi√≥n"});
    cola.push({2,1,"Reinicio"});
    cola.push({3,2,"Problema de red"});

    while(!cola.empty()){
        auto t=cola.top(); cola.pop();
        cout<<"Ticket "<<t.id<<": "<<t.desc<<" (Prioridad "<<t.prioridad<<")\n";
    }
    return 0;
}
