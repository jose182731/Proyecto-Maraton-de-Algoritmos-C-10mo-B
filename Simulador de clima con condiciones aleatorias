#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

struct Dia {
    int temperatura;
    string clima;
};

string obtenerClimaAleatorio() {
    int r = rand() % 3;
    switch (r) {
        case 0: return "Soleado";
        case 1: return "Nublado";
        case 2: return "Lluvioso";
    }
    return "";
}

