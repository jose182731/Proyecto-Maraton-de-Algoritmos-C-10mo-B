#include <iostream>
#include <cstdlib
#include <ctime>
using namespace std;

int main() {
    int contador[6] = {0};
    srand(time(0));

    for (int i = 0; i < 100; i++) {
        int lanzamiento = rand() % 6; // 0 a 5
        contador[lanzamiento]++;
    }

    for (int i = 0; i < 6; i++) {
        cout << "Cara " << i + 1 << ": " << contador[i] << " veces" << endl;
    }

    return 0;
}
