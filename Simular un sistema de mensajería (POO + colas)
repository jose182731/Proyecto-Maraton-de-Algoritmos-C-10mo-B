#include <iostream>
#include <queue>
using namespace std;

class Mensaje {
public:
    string remitente, receptor, texto;
    Mensaje(string r,string d,string t):remitente(r),receptor(d),texto(t){}
};

int main(){
    queue<Mensaje> bandeja;
    bandeja.push(Mensaje("Ana","Luis","Hola, ¿cómo estás?"));
    bandeja.push(Mensaje("Luis","Ana","Bien, ¿y tú?"));

    while(!bandeja.empty()){
        auto m=bandeja.front(); bandeja.pop();
        cout<<"De: "<<m.remitente<<" -> "<<m.receptor<<": "<<m.texto<<endl;
    }
    return 0;
}
