#include <iostream>
#include <queue>
#include <string>
using namespace std;

struct Paciente {
    string nombre;
    int prioridad;
    bool operator<(const Paciente& p) const { return prioridad < p.prioridad; }
};

int main(){
    priority_queue<Paciente> cola;
    cola.push({"Juan",2});
    cola.push({"Ana",3});
    cola.push({"Luis",1});

    while(!cola.empty()){
        cout<<"Atendiendo a: "<<cola.top().nombre<<" (Prioridad "<<cola.top().prioridad<<")\n";
        cola.pop();
    }
    return 0;
}
