#include <iostream>
#include <string>
using namespace std;

struct Producto {
    string nombre;
    int cantidad;
    float precio;
};

int main() {
    int n;
    cout << "Cantidad de productos: ";
    cin >> n;

    Producto *inventario = new Producto[n];
    for (int i = 0; i < n; i++) {
        cout << "\nProducto " << i + 1 << ":\n";
        cout << "Nombre: "; cin >> inventario[i].nombre;
        cout << "Cantidad: "; cin >> inventario[i].cantidad;
        cout << "Precio: "; cin >> inventario[i].precio;
    }

    cout << "\n--- Inventario ---\n";
    for (int i = 0; i < n; i++) {
        cout << inventario[i].nombre << " - Cantidad: " << inventario[i].cantidad
             << " - Precio: $" << inventario[i].precio << endl;
    }

    delete[] inventario;
    return 0;
}
