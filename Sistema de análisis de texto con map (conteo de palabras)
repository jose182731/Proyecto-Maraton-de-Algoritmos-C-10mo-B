#include <iostream>
#include <map>
#include <sstream>
using namespace std;

int main(){
    string texto="hola mundo hola cpp mundo avanzado";
    string palabra;
    map<string,int> frecuencia;
    stringstream ss(texto);
    while(ss>>palabra) frecuencia[palabra]++;

    for(auto &p:frecuencia)
        cout<<p.first<<": "<<p.second<<" veces\n";
    return 0;
}
