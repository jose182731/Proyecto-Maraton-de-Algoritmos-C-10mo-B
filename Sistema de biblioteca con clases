#include <iostream>
#include <vector>
#include <string>
using namespace std;

class Libro {
    string titulo, autor;
    bool prestado;
public:
    Libro(string t, string a) : titulo(t), autor(a), prestado(false) {}
    void prestar() { prestado = true; }
    void devolver() { prestado = false; }
    void mostrar() {
        cout << titulo << " de " << autor << " | " 
             << (prestado ? "Prestado" : "Disponible") << endl;
    }
};

int main() {
    vector<Libro> biblioteca = {
        Libro("Cien Años de Soledad", "García Márquez"),
        Libro("1984", "George Orwell")
    };
    biblioteca[0].prestar();
    for (auto &l : biblioteca) l.mostrar();
    return 0;
}
