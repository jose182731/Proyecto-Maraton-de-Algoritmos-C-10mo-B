#include <iostream>
#include <vector>
#include <string>
using namespace std;

class Producto {
    string nombre;
    int cantidad;
    double precio;
public:
    Producto(string n, int c, double p) : nombre(n), cantidad(c), precio(p) {}
    double valorTotal() { return cantidad * precio; }
    void mostrar() { cout << nombre << " | Cant: " << cantidad << " | Total: $" << valorTotal() << endl; }
};

int main() {
    vector<Producto> inventario = {
        Producto("Laptop", 3, 1200),
        Producto("Mouse", 10, 25),
        Producto("Teclado", 5, 45)
    };
    for (auto &p : inventario) p.mostrar();
    return 0;
}
