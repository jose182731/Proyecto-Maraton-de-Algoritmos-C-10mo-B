#include <iostream>
#include <vector>
using namespace std;

#define INF 1e9

int main() {
    int n = 4;
    vector<vector<int>> dist = {
        {0,5,INF,10},
        {INF,0,3,INF},
        {INF,INF,0,1},
        {INF,INF,INF,0}
    };

    for(int k=0;k<n;k++)
        for(int i=0;i<n;i++)
            for(int j=0;j<n;j++)
                if(dist[i][k]+dist[k][j]<dist[i][j])
                    dist[i][j]=dist[i][k]+dist[k][j];

    cout<<"Distancias mÃ­nimas entre ciudades:\n";
    for(auto &fila:dist){
        for(auto d:fila) cout<<d<<" ";
        cout<<endl;
    }
    return 0;
}
