#include <iostream>
#include <queue>
#include <thread>
#include <chrono>
using namespace std;

struct Entrega { int id, prioridad, duracion; string destino; bool operator<(const Entrega &e) const { return prioridad<e.prioridad; } };

void procesarEntrega(Entrega e){
    cout<<"Procesando entrega "<<e.id<<" a "<<e.destino<<" (Prioridad "<<e.prioridad<<")\n";
    this_thread::sleep_for(chrono::seconds(e.duracion));
    cout<<"Entrega "<<e.id<<" completada\n";
}

int main(){
    priority_queue<Entrega> cola;
    cola.push({1,3,4,"Ciudad A"});
    cola.push({2,1,2,"Ciudad B"});
    cola.push({3,2,3,"Ciudad C"});

    while(!cola.empty()){
        Entrega e=cola.top(); cola.pop();
        procesarEntrega(e);
    }
    return 0;
}
