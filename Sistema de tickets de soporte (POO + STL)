#include <iostream>
#include <queue>
using namespace std;

class Ticket {
public:
    int id, prioridad;
    string descripcion;
    bool operator<(const Ticket& t) const { return prioridad < t.prioridad; }
    Ticket(int i,int p,string d):id(i),prioridad(p),descripcion(d){}
};

int main(){
    priority_queue<Ticket> cola;
    cola.push(Ticket(1,3,"Error de conexi√≥n"));
    cola.push(Ticket(2,1,"Reinicio sistema"));
    cola.push(Ticket(3,2,"Problema de red"));

    while(!cola.empty()){
        auto t=cola.top(); cola.pop();
        cout<<"Atendiendo Ticket "<<t.id<<" ("<<t.descripcion<<") - Prioridad "<<t.prioridad<<"\n";
    }
    return 0;
}
