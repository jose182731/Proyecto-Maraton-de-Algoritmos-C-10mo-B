#include <iostream>
using namespace std;

int main() {
    float a, b, c;
    cout << "Ingrese los tres lados del triángulo: ";
    cin >> a >> b >> c;

    if (a + b > c && a + c > b && b + c > a)
        cout << "Es un triángulo válido." << endl;
    else
        cout << "No es un triángulo válido." << endl;

    return 0;
}
