#include <iostream>
using namespace std;

struct Nodo {
    int dato; Nodo *izq,*der;
    Nodo(int d):dato(d),izq(nullptr),der(nullptr){}
};

Nodo* insertar(Nodo* raiz,int val){
    if(!raiz) return new Nodo(val);
    if(val<raiz->dato) raiz->izq=insertar(raiz->izq,val);
    else raiz->der=insertar(raiz->der,val);
    return raiz;
}

void inOrden(Nodo* raiz){
    if(!raiz) return;
    inOrden(raiz->izq);
    cout<<raiz->dato<<" ";
    inOrden(raiz->der);
}

int main(){
    Nodo* raiz=nullptr;
    int datos[]={50,30,70,20,40,60,80};
    for(int d:datos) raiz=insertar(raiz,d);

    cout<<"Recorrido inorden: ";
    inOrden(raiz);
    return 0;
}
